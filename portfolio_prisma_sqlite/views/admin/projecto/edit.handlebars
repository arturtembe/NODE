
<main class="main" style="padding: 2% 0; overflow-y: auto;">

    {{!-- =========== FORM ======= --}}

    <section class="row-form" style="overflow: overflow-y: auto;">

        <form class="addform" id="editform">

            <h1 class="header-form">
                Adiconar
            </h1>

            <input type="hidden" id="idForm" name="idForm"
                value="{{ projecto.id }}" >
            
            <div class="box-form">
                <label>Titulo</label>
                <input type="text" id="titulo" name="titulo"
                required value="{{ projecto.titulo }}" >
            </div>
            <div class="box-form">
                <label>GIThub</label>
                <input type="text" id="github" name="github"
                value="{{ projecto.github }}" >
            </div>
            <div class="box-form">
                <label>Live</label>
                <input type="text" id="live" name="live"
                value="{{ projecto.live }}" >
            </div>
            <div class="box-form">
                <label>Estado</label>
                <select id="estado" name="estado">
                    {{#if projecto.estado.pendente}}
                        <option value="concluido" selected>Concluido</option>
                    {{else }}
                        <option value="concluido">Concluido</option>
                    {{/if }}
                
                    {{#if projecto.estado.em_andamento}}
                        <option value="em andamento" selected>Em andamento</option>
                    {{else }}
                        <option value="em andamento">Em andamento</option>
                    {{/if }}
                        
                    {{#if projecto.estado.pendente}}
                        <option value="pendente" selected>Pendente</option>
                    {{else }}
                        <option value="pendente">Pendente</option>
                    {{/if }}
                </select>
            </div>
            <div class="box-form">
                <label>Destaque</label>
                <select name="destaque" id="destaque">
                    {{#if habilidade.destaque}}
                        <option value="false">Nao</option>
                        <option value="true" selected>Sim</option>
                    {{else }}
                        <option value="false" selected>Nao</option>
                        <option value="true">Sim</option>
                    {{/if }}
                    
                </select>
            </div>
            <div class="box-form">
                <label>Logotipo</label>
                <input type="text" id="files" name="files"
                required value="{{ projecto.logotipo }}">
            </div>
            <div class="box-form">
                <label>Images</label>
                <input type="text" id="images" name="images"
                value="{{ projecto.images }}">
            </div>
            <div class="box-form">
                <fieldset>
                    <legend>Tecnologia</legend>

                    <div class="box-tecn">
                        {{#each habilidade}}
                            
                            {{#if active}}
                                <button type="button" class="btn btn-add-tecn btn-add-tecn-selected"
                                data-id="{{ id }}" id="{{ id }}">{{ tecnologia }}</button>
                            {{else }}
                                <button type="button" class="btn btn-add-tecn"
                                data-id="{{ id }}" id="{{ id }}">{{ tecnologia }}</button>
                            {{/if }}

                        {{/each }}
                    </div>

                </fieldset>

            </div>

            <div class="box-form-buttons">
                <button type="submit" class="btn btn-add">UPDATE</button>
                <button type="reset" class="btn btn-reset">CANCEL</button>
            </div>
            
        </form>

    </section>

</main>

<script type="module" src="/js/projecto/editForm.js"></script>